{
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(mp4|webm|ogg|avi|mov)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "video/mp4"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "!/**/*.@(mp4|webm|ogg|avi|mov|png|jpg|jpeg|gif|svg|ico|css|js|json|xml|txt|woff|woff2|ttf|eot)",
        "destination": "/index.html"
      }
    ]
  }
}
