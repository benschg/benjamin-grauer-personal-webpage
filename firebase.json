{
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.mp4",
        "headers": [
          {
            "key": "Content-Type", 
            "value": "video/mp4"
          },
          {
            "key": "Accept-Ranges",
            "value": "bytes"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "!**/*.@(jpg|jpeg|png|gif|svg|mp4|webm|css|js|ico|woff|woff2|ttf|eot|json|xml|txt)",
        "destination": "/index.html"
      }
    ]
  }
}
